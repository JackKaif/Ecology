extends layout

block css
  link(rel='stylesheet', href='./css/gallery.css')

block screen
  //if logged
  form#upload(method="POST" action="/upload" encType="multipart/form-data")
    p Хотите добавить своё изображение?
    label#lb(for='photo') Выбрать изображение
    input#photo(type='file' name='image')
    input.submit(type='submit' value='Опубликовать')
    
    script.
      label = document.getElementById('lb');
      input = document.getElementById('photo');
      input.onchange = () => {
        a = input.value;
        a = a.split('\\');
        a = a[a.length - 1];
        lb.innerText = a.split('.')[0];
      }
  
  #gallery
    - for(var i = 0; i < result.length; i++) {
        - var rng = 100 * (i + 5) / 2; //Math.floor(Math.random() * (500 - 200 + 1)) + 200;
        a.photo(id='pid_#{i}')
          img(src='/' + result[i].image).image
          .line
            .comment Комментировать
            .views.right
              span.viewsIcon
              span.viewsText Просмотров 
              span.viewsCount #{i + 4}
            .clear
    - }